{
  "manifest_version": 3,
  "name": "Newgrounds FullScreen",
  "version": "0.1",
  "description": "Make all games fullscreen on Newgrounds",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://www.newgrounds.com/portal/view/*"],
      "js": ["scripts/fullscreen.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "newgrounds_fullscreen@angsanch.dev",
      "strict_min_version": "109.0"
    }
  }
}
